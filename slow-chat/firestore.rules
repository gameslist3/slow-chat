rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /* ================= USERS ================= */
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      // Owner can do full updates (profile, settings, etc.)
      allow update: if isOwner(userId);
      // Any signed-in user can update following/followers/joinedGroups (follow accept, leave group, etc.)
      allow update: if isSignedIn() &&
        request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['following', 'followers', 'joinedGroups', 'mutedGroups']);
      allow delete: if isOwner(userId);
    }

    /* ================= NOTIFICATIONS ================= */
    match /notifications/{id} {
      allow read, create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    /* ================= FOLLOW REQUESTS ================= */
    match /follow_requests/{id} {
      allow read: if isSignedIn() &&
        (resource.data.fromId == request.auth.uid ||
         resource.data.toId == request.auth.uid);

      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() &&
        (resource.data.fromId == request.auth.uid ||
         resource.data.toId == request.auth.uid);
    }

    /* ================= PERSONAL CHATS ================= */
    match /personal_chats/{chatId} {
      allow read, create, update: if isSignedIn();
      allow delete: if isSignedIn() &&
        request.auth.uid in resource.data.userIds;
    }

    match /personal_chats/{chatId}/messages/{messageId} {
      allow read, create: if isSignedIn();
      allow update, delete: if isSignedIn() &&
        resource.data.senderId == request.auth.uid;
    }

    /* ================= GROUPS ================= */
    match /groups/{groupId} {
      allow read, create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    match /groups/{groupId}/messages/{messageId} {
      allow read, create: if isSignedIn();
      allow update, delete: if isSignedIn();
    }
  }
}
