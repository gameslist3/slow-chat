rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isParticipant() {
      return isSignedIn() &&
        (request.auth.uid in resource.data.userIds || 
         (resource.data.participants != null && request.auth.uid in resource.data.participants));
    }

    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn();
      allow update: if isSignedIn(); // Allow bidirectional connection updates
      allow create: if isOwner(userId);
    }

    // Groups collection
    match /groups/{groupId} {
      allow read, create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn() && resource.data.createdBy == request.auth.uid;
    }

    // Messages in groups
    match /groups/{groupId}/messages/{messageId} {
      allow read, create, update: if isSignedIn();
      allow delete: if isSignedIn() && resource.data.senderId == request.auth.uid;
    }

    // Follow Requests
    match /follow_requests/{requestId} {
      allow read, update, delete: if isSignedIn() && (resource.data.fromId == request.auth.uid || resource.data.toId == request.auth.uid);
      allow create: if isSignedIn() && request.resource.data.fromId == request.auth.uid;
    }

    // Notifications
    match /notifications/{id} {
      allow read, update, delete: if isSignedIn() && request.auth.uid == resource.data.userId;
      allow create: if isSignedIn();
    }

    // Personal Chats
    match /personal_chats/{chatId} {
      allow read, update, delete: if isParticipant();
      allow create: if isSignedIn();
    }

    match /personal_chats/{chatId}/messages/{messageId} {
      allow read, create, update: if isSignedIn() && (
        exists(/databases/$(database)/documents/personal_chats/$(chatId)) &&
        request.auth.uid in get(/databases/$(database)/documents/personal_chats/$(chatId)).data.userIds
      );
      allow delete: if isSignedIn() && (
        resource.data.senderId == request.auth.uid || 
        request.auth.uid in get(/databases/$(database)/documents/personal_chats/$(chatId)).data.userIds
      );
    }
  }
}
