rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isParticipant() {
      return isSignedIn() &&
        (request.auth.uid in resource.data.userIds || 
         (resource.data.participants != null && request.auth.uid in resource.data.participants));
    }

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      // allow user updates + unfollow removal
      allow update: if request.auth != null;
      allow delete: if request.auth.uid == userId;
    }

    // Groups collection
    match /groups/{groupId} {
      allow read, create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn() && resource.data.createdBy == request.auth.uid;
    }

    // Messages in groups
    match /groups/{groupId}/messages/{messageId} {
      allow read, create, update: if isSignedIn();
      allow delete: if isSignedIn() && resource.data.senderId == request.auth.uid;
    }

    // Follow Requests
    match /follow_requests/{requestId} {
      allow read, update, delete: if isSignedIn() && (resource.data.fromId == request.auth.uid || resource.data.toId == request.auth.uid);
      allow create: if isSignedIn() && request.resource.data.fromId == request.auth.uid;
    }

    // Notifications
    match /notifications/{id} {
      allow read, update, delete: if isSignedIn() && request.auth.uid == resource.data.userId;
      allow create: if isSignedIn();
    }

    // Personal Chats
    match /personal_chats/{chatId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.userIds;
      allow create: if request.auth != null && request.auth.uid in request.resource.data.userIds;
      allow update: if request.auth != null && request.auth.uid in resource.data.userIds;
      allow delete: if request.auth != null && request.auth.uid in resource.data.userIds;

      match /messages/{messageId} {
        allow read: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/personal_chats/$(chatId)).data.userIds;
        allow create: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/personal_chats/$(chatId)).data.userIds;
        allow update: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/personal_chats/$(chatId)).data.userIds;
        allow delete: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/personal_chats/$(chatId)).data.userIds;
      }
    }
  }
}
