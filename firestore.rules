rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isGroupMember(groupId) {
      return isSignedIn() && 
             (request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.memberIds);
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if true; // Allow public email lookup for reset flow
      allow create: if isSignedIn();
      allow update, delete: if request.auth.uid == userId;
    }
    
    // Groups collection
    match /groups/{groupId} {
      allow read: if isSignedIn(); // Allow discovery
      allow create: if isSignedIn();
      allow update: if isGroupMember(groupId); // Allow joining/leaving only via controlled service logic
      allow delete: if isOwner(resource.data.creatorId);
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read: if isGroupMember(groupId);
        allow create: if isGroupMember(groupId);
        allow delete: if isSignedIn() && resource.data.senderId == request.auth.uid;
      }

      // Key Buckets (E2EE Sender Keys)
      match /keys/{recipientId} {
        allow read, write: if isOwner(recipientId);
      }
    }
    
    // Personal Chats
    match /personal_chats/{chatId} {
      function isChatParticipant() {
        return isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/personal_chats/$(chatId)).data.userIds;
      }

      allow read, update, delete: if isSignedIn() && request.auth.uid in resource.data.userIds;
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.userIds;

      match /messages/{messageId} {
        allow read, create, delete: if isChatParticipant();
      }
    }

    // Follow Requests
    match /follow_requests/{requestId} {
      allow read, update, delete: if isSignedIn() && (resource.data.fromId == request.auth.uid || resource.data.toId == request.auth.uid);
      allow create: if isSignedIn() && request.resource.data.fromId == request.auth.uid;
    }

    // Notifications
    match /notifications/{notificationId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isSignedIn();
    }

    // Sync Sessions (QR Device Pairing)
    match /sync_sessions/{sessionId} {
      allow read, write: if isSignedIn(); // Ephemeral and short-lived, locked by session logic
    }

    // --- Password Reset OTP Flow (Public) ---
    match /password_reset_otps/{email} {
      allow read, create, delete: if true;
    }

    match /password_reset_intents/{intentId} {
      allow create: if true;
    }

    match /mail/{mailId} {
      allow create: if true;
    }
  }
}
